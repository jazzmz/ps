/* Сделали фрэйм для ввода даты */
DEFINE FRAME frDateBeg
             cTitle NO-LABEL AT COL 1 ROW 1
             cDayBeg NO-LABEL AT COL 5 ROW 1 
             "." AT COL 7 ROW 1 
             cMonthBeg AT COL 8 ROW 1 NO-LABEL 
             "." AT COL 10 ROW 1 
             cYearBeg AT COL 11 ROW 1 NO-LABEL             
             WITH 
	     DCOLOR 45 PFCOLOR 75
	     SIZE 1 BY 2 
	    AT COL 1 ROW 2 
	    NO-BOX
           .

/* Определили фрэйм с временем */
DEFINE FRAME frTimeBeg
             cTitle NO-LABEL AT COL 1 ROW 1
             cHoursBeg NO-LABEL AT COL 3 ROW 1 
             ":" AT COL 5 ROW 1 
             cMinutesBeg NO-LABEL AT COL 6 ROW 1
             WITH 
	     DCOLOR 45 PFCOLOR 75
             SIZE 1 BY 2 
	     AT COL 1 ROW 2 
	    NO-BOX
             .

